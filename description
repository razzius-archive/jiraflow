#!/usr/bin/env python3

import os

import requests

from lib import JIRA_SEARCH_URL, OPEN_ISSUES_JQL


response = requests.get(
    JIRA_SEARCH_URL,
    params={
        'jql': OPEN_ISSUES_JQL.format(JIRA_USER=os.environ['JIRA_USER']),
        'maxResults': 1,
    },
    headers={'Authorization': os.environ['JIRA_AUTH']},
)

print(response.json()['issues'][0]['fields']['description'])
